<odoo>
  <data>
    <record id="inherited_model_view_form" model="ir.ui.view">
        <field name="name">sale.model.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
              <field name="sale_title"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="version"/>
                <field name="observ"/>
                <field name="base"/>
                <field name="alt"/>
                <field name="price_m2"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="no_invoice" attrs="{'readonly':[('state', 'not in',['sale', 'no_invoice'])]}"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name='statusbar_visible'>draft,sent,sale,no_invoice</attribute>
            </xpath>
             <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name='attrs'>{'readonly':[['state', 'not in', ['draft', 'sent', 'no_invoice']]]}</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_order_template_id']" position="attributes">
                <attribute name='attrs'>{'readonly':[['state', 'not in', ['draft', 'sent', 'no_invoice']]]}</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_cancel']" position="attributes">
                <attribute name='attrs'>{'invisible':[['state', 'not in', ['draft','sent','sale', 'no_invoice']]]}</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_quotation_send'][4]" position="attributes">
                <attribute name='states'>sent,sale,no_invoice</attribute>
            </xpath>
        </field>
    </record>
    <record id="mrp_model_view_form" model="ir.ui.view">
        <field name="name">mrp.model.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">
              <field name="mrp_title"/>
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="version"/>
                <field name="observ"/>
                <field name="observm"/>
                <field name="description"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="base"/>
                <field name="alt"/>
                <field name="price_m2"/>
            </xpath>
        </field>
    </record>
    <record id="worker_model_view_tree" model="ir.ui.view">
        <field name="name">worker.model.form.inherit</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_editable_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="version" optional="show"/>
                <field name="observ" optional="show"/>
                <field name="observm" optional="show"/>
                <field name="base" optional="show"/>
                <field name="alt" optional="show"/>
                <field name="price_m2" optional="show"/>
            </xpath>
        </field>
      </record>
  </data>
</odoo>